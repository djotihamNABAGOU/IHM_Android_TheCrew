<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SpendingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/savePurchaseImage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="68dp"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:src="@drawable/ic_save_black_24dp"
                    tools:layout_editor_absoluteX="0dp" />

                <TextView
                    android:id="@+id/savePurchaseText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ajouter une dépense imprévue"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/savePurchaseImage"
                    tools:layout_editor_absoluteX="0dp" />

                <ImageView
                    android:id="@+id/historyImage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="56dp"
                    android:clickable="true"
                    android:src="@drawable/ic_history_black_24dp"
                    app:layout_constraintTop_toBottomOf="@+id/expendituresText"
                    tools:layout_editor_absoluteX="0dp" />

                <TextView
                    android:id="@+id/historyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Historique"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/historyImage"
                    tools:layout_editor_absoluteX="0dp" />

            </LinearLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>